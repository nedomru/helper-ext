    "gecko": {
      "id": "{9dc9b1d0-f172-4f99-adbf-c0e28d2da3dc}",
      "update_url": "https://authf.xyz/helper_updates.json"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
