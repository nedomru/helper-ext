{
  "manifest_version": 2,
  "name": "Хелпер",
  "author": "Roman Chursanov",
  "developer": {
    "name": "Roman Chursanov",
    "url": "https://chrsnv.ru"
  },
  "homepage_url": "https://authfailed.github.io/domru-helper/",
  "description": "Твой швейцарский нож для работы 😎",
  "version": "2.8.3",
  "browser_specific_settings": {
    "gecko": {
      "id": "{724d1c91-059e-4392-8478-494513fc8241}",
      "update_url": "https://helper.chrsnv.ru/api/version.json"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "scripts/external/jquery.min.js",
        "scripts/external/notify.js",
        "scripts/external/dompurify.min.js",
        "scripts/internal/background.js",
        "scripts/internal/highlights.js",
        "scripts/internal/darkTheme.js",
        "scripts/internal/armEssentials.js",
        "scripts/internal/lineEssentials.js",
        "scripts/internal/genesysEssentials.js",
        "scripts/internal/settings.js"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "background": {
    "scripts": ["scripts/internal/extEssentials.js"],
    "persistent": false
  },
  "permissions": [
    "*://*.ertelecom.ru/*",
    "*://*.maclookup.app/*",
    "*://*.telegram.org/*",
    "*://*.github.com/*",
    "tabs",
    "storage",
    "activeTab",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Хелпер",
    "default_icon": "icons/icon128.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  }
}
