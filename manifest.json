{
  "manifest_version": 2,
  "name": "Помощник",
  "description": "",
  "version": "1.7.4",
  "browser_specific_settings": {
    "gecko": {
      "update_url": "https://authf.xyz/helper_updates.json"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "scripts/background.js",
        "scripts/highlights.js",
        "scripts/popup.js",
        "scripts/sections.js",
        "scripts/jquery.min.js",
        "scripts/notify.min.js",
        "scripts/notify.js",
        "scripts/hideElements.js",
        "scripts/copyElements.js",
        "scripts/settings.js"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "permissions": ["*://*.ertelecom.ru/*", "tabs", "storage", "activeTab"],
  "browser_action": {
    "default_title": "Помощник",
    "default_icon": "icons/ext_icon.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  }
}
