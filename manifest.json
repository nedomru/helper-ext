{
  "manifest_version": 2,
  "name": "Помощник",
  "description": "",
  "version": "2.7",
  "browser_specific_settings": {
    "gecko": {
      "id": "{724d1c91-059e-4392-8478-494513fc8241}"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "scripts/background.js",
        "scripts/jquery.min.js",
        "scripts/notify.js",
        "scripts/armEssentials.js",
        "scripts/lineEssentials.js",
        "scripts/genesysEssentials.js",
        "scripts/highlights.js",
        "scripts/darkTheme.js",
        "scripts/settings.js"
      ],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "background": {
    "scripts": ["scripts/extEssentials.js"],
    "persistent": false
  },
  "permissions": [
    "*://*.ertelecom.ru/*",
    "*://*.maclookup.app/*",
    "*://*.telegram.org/*",
    "*://*.github.com/*",
    "tabs",
    "storage",
    "activeTab",
    "notifications"
  ],
  "browser_action": {
    "default_title": "Помощник",
    "default_icon": "icons/icon128.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  }
}
