{
  "manifest_version": 2,
  "name": "Помощник",
  "description": "",
  "version": "1.3",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["background.js", "highlights.js", "popup.js", "sections.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "permissions": ["http://*/*", "https://*/*", "contextMenus", "tabs"],
  "browser_action": {
    "default_title": "Помощник",
    "default_icon": "icons/ext_icon.png",
    "default_popup": "popup.html"
  }
}
